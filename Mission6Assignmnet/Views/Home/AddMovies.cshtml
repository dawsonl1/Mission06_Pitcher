@model MovieRecord

@{
    ViewData["Title"] = "Add Movies";
}

<div>
    <h1>Add a Movie</h1>

    <form asp-controller="Home" asp-action="AddMovie" method="post">
        <div asp-validation-summary="ModelOnly"></div>

        <div>
            <label asp-for="Category"></label>
            <input asp-for="Category" required />
            <span asp-validation-for="Category"></span>
        </div>

        <div>
            <label asp-for="Title"></label>
            <input asp-for="Title" required />
            <span asp-validation-for="Title"></span>
        </div>

        <div>
            <label asp-for="Year"></label>
            <input asp-for="Year" type="number" required />
            <span asp-validation-for="Year"></span>
        </div>

        <div>
            <label asp-for="DirectorFirstName">Director's First Name</label>
            <input asp-for="DirectorFirstName" required />
            <span asp-validation-for="DirectorFirstName"></span>
        </div>

        <div>
            <label asp-for="DirectorLastName">Director's Last Name</label>
            <input asp-for="DirectorLastName" required />
            <span asp-validation-for="DirectorLastName"></span>
        </div>

        <div>
            <label asp-for="Rating"></label>
            <select asp-for="Rating" required>
                <option value="" selected disabled>Select a rating</option>
                <option value="G">G</option>
                <option value="PG">PG</option>
                <option value="PG-13">PG-13</option>
                <option value="R">R</option>
            </select>
            <span asp-validation-for="Rating"></span>
        </div>

        <div>
            <label asp-for="Edited">Is it edited? <span class="optional-text">(optional)</span></label>
            <select asp-for="Edited">
                <option value="" selected>Select yes or no</option>
                <option value="true">Yes</option>
                <option value="false">No</option>
            </select>
            <span asp-validation-for="Edited"></span>
        </div>

        <div>
            <label asp-for="LentTo">Who is it lent to? <span class="optional-text">(optional)</span></label>
            <input asp-for="LentTo" />
            <span asp-validation-for="LentTo"></span>
        </div>

        <div>
            <label asp-for="Notes">Notes <span class="optional-text">(optional)</span></label>
            <input asp-for="Notes" maxlength="25" />
            <span asp-validation-for="Notes"></span>
        </div>

        <div>
            <button type="submit">Add Movie</button>
        </div>
    </form>
</div>